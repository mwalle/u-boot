/dts-v1/;

#include "bl808.dtsi"

/ {
	compatible = "sipeed,m1s", "bouffalolab,bl808";

	memory@50000000 {
		device_type = "memory";
		reg = <0x50000000 0x04000000>;
	};
};

&sflash {
	status = "okay";
	#address-cells = <1>;
	#size-cells = <0>;

	spi-flash@0 {
		compatible = "jedec,spi-nor";
		reg = <0>;
		spi-max-frequency = <50000000>;
		spi-tx-bus-width = <4>;
		spi-rx-bus-width = <4>;
		m25p,fast-read;
		//broken-flash-reset;
	};
};

&xtal {
	clock-frequency = <40000000>;
};
